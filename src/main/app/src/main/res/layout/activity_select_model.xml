<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectModel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_model1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_model1" />

        <Button
            android:id="@+id/btn_model2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_model2" />

        <Button
            android:id="@+id/btn_defaultModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_default_model" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>